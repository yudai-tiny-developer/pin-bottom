{
    "manifest_version": 3,
    "name": "Pin YouTube Control",
    "version": "1.7.0",
    "description": "__MSG_appDesc__",
    "default_locale": "en",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "css": [
                "content.css"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end",
            "matches": [
                "https://www.youtube.com/*"
            ],
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "common.js"
            ],
            "matches": [
                "https://www.youtube.com/*"
            ]
        }
    ],
    "permissions": [
        "storage"
    ],
    "commands": {
        "pin": {
            "description": "Toggle pin state."
        }
    }
}